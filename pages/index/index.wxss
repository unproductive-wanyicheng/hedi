}
.river-wall-select {
	background: #546776;
	height: 92rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 20rpx;
}
.icon {
	display: flex;
	justify-content: center;
	align-items: center;
}
.icon image {
	width: 54rpx;
	height: 44rpx;
}
.selector {
	flex: 1;
	/*background: #fff;*/
	display: flex;
	justify-content: flex-start;
	align-items: center;
	margin-left: 10rpx;
	border-radius: 10rpx;
	/*padding: 0 20rpx;*/
	height: 58rpx;
	color: #fff;
	font-size: 0;
}
.selector .text {
	/*flex: 1;*/
	margin: 0 10rpx;
	font-size: 26rpx;
}

.down image {
	width: 20rpx;
	height: 26rpx;
}

.left image {
	width: 20rpx;
	height: 28rpx;
}
.main-monitor-info {
	display: flex;
	justify-content: space-between;
	align-items: center;
	background: #99CC33;
	height: 104rpx;
	color: #fff;
	font-size: 20rpx;
	padding: 0 20rpx;
}
.main-monitor-info .mid {
	flex: 1;
	display: flex;
	align-items: flex-end;
	padding-left: 60rpx;
}
.main-monitor-info .mid .text {
	font-size: 36rpx;
	margin-right: 20rpx;
}
.main-monitor-info .mid  .english {
	padding-bottom: 5rpx;
}
.main-monitor-info .right {
	display: flex;
	align-items: flex-end;
}
.main-monitor-info .right .num {
	font-size: 36rpx;
	color: #FF9900;
	margin-right: 20rpx;
}
.main-monitor-info .right .sign {
	padding-bottom: 5rpx;
}
.modal {
	padding: 20rpx 40rpx 0rpx 40rpx;
	position: fixed;
	top: 0;
	bottom: 0;
	width: 100%;
	background: rgba(0, 0, 0, .5);
	z-index: 999999;
	/*display: flex;
	flex-direction: column;*/
	overflow: hidden;
	box-sizing:border-box;
}
.inner {
	display: flex;
	flex-direction: column;
	border-radius: 10rpx;
	height: 1040rpx;
	overflow-y: auto;
}
.header {
	display: flex;
	align-items: center;
	padding: 18rpx 38rpx;
	background: #99CC33;
	color: #fff;
	font-size: 28rpx;
	flex: 0 0 auto;
}
.header .title {
	flex: 1;
}
.header .share {
	font-size: 0;
}
.header .share .button {
	border: none;
    /*position: absolute;
    right: 82rpx;
    top: 82rpx;*/
    padding: 0;
    line-height: 40rpx;
}
.header .share image {
	width: 40rpx;
	height: 40rpx;
}
.inner .map {
	
}
.inner .info {
	flex: 1;
	background: #fff;
	padding: 50rpx 30rpx 30rpx 30rpx;
	font-size: 22rpx;
}
.message {
	line-height: 40rpx;
	border-bottom: 2rpx solid #f7f7f7;
	padding-bottom: 30rpx;
}
.location {
	line-height: 40rpx;
	border-bottom: 2rpx solid #f7f7f7;
	padding: 30rpx 0;
	display: flex;
	align-items: flex-start;
}
.l-title {
	flex: 0 0 auto;
	flex-wrap: nowrap;
	color: #b0b0b0;
}
.l-desc {
	padding-left: 25rpx;
}
.data {
	padding: 40rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.item {
	margin: 0 50rpx;
}
.item .i-top {
	color: #ff9900;
	font-size: 30rpx;
	padding-bottom: 25rpx;
	text-align: center;
}
.item .i-down {
	color: #b0b0b0;
}
.btn {
	width: 180rpx;
	height: 82rpx;
	background: #d8d8d8;
	display: flex;
	justify-content: center;
	align-items: center;
	color: #a2a2a2;
	margin: auto;
}
.sp-lists {
	display: flex;
	justify-content: center;
	align-items: center;
	box-sizing: border-box;
	border-top: 1rpx solid #34424e;
	flex: 0 0 auto;
	background: #546776;
}
/*.sp-lists:last-child {
	border-bottom: 1rpx solid #34424e;
}*/
.sp-lists .s-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	color: #fff;
	padding: 45rpx 0;
	flex: 1;
	border-right: 1rpx solid #34424e;
}
.sp-lists .s-item:last-child {
	border-right: none;
}
.sp-lists .s-item image {
	width: 60rpx;
	height: 60rpx;
}
.sp-lists .s-item .item-title {
	font-size: 22rpx;
	padding: 20rpx 0 30rpx 0;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.sp-lists .s-item .item-title .item-nums {
	font-size: 40rpx;
}
.sp-lists .s-item .item-data {
	font-size: 26rpx;
	display: flex;
	align-items: center;
}
.sp-lists .s-item .item-data .i-d-num {
	margin-left: 20rpx;
	color: #FF9900;
}
.sp-lists .s-i-border {
	height: 206rpx;
	width: 1rpx;
	background: #34424E;
}
.home .sp-lists .data-chart-title{
	font-size: 26rpx;
}
.sp-lists .s-item .char-margin-top {
	height: 190rpx;
	padding: 0;
}
.home .sp-lists .data-chart {
	width: 180rpx;
	height: 180rpx;
	margin-bottom: 10rpx;
}
.home .sp-lists .data-chart .h-chart-item-4 {
	width: 100%;
	height: 100%;
}
.home .h-chart {
	height: 330rpx;
	border-bottom: 1rpx solid #415261;
	padding-top: 20rpx;
	background: #6D7D89;
}
.home .no-border {
	border: none;
}
.h-chart-item {
	width: 100%;
	height: 330rpx;
}