.login {
	position: absolute;
	top: 0;
	bottom: 0;
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	background: #546776;
	flex-direction: column;
	overflow: hidden;
}
.box {
	width: 600rpx;
}
.inputs {

}
.item {
	background: #fff;
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 16rpx;
	font-size: 28rpx;
	color: #999999;
}
.item:first-child {
	border-bottom: 1rpx solid #979797;
}
.item .title {
	flex: 0 0 56rpx;
}
.item input {
	flex: 1;
	padding-left: 20rpx;
}
.btn {
	width: 600rpx;
	color: #fff;
	background: #0076FF;
	font-size: 32rpx;
	padding: 20rpx 0;
	display: flex;
	justify-content: center;
	align-items: center;
	letter-spacing: 4rpx;
	margin-top: 80rpx;
}
.icon {
	position: absolute;
	bottom: 54rpx;
}
.icon image {
	width: 180rpx;
	height: 50rpx;
}

.login .header {
	position: absolute;
	top: 124rpx;
	display: flex;
	justify-content: center;
	flex-direction: column;
	align-items: center;
}

.login .header image{
	width: 143rpx;
	height: 143rpx;
}
.login .header .title {
	font-size: 37rpx;
	color: #fff;
	margin-top: 10rpx;
}