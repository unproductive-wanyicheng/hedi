.watching-detail {
	width: 100%;
	height: 100%;
	/*overflow-y: auto;*/
	/*overflow-x: hidden;*/
}
.watching-detail_img-box {
	position: relative;
	width: 100%;
	height: 422rpx;
	box-sizing: border-box;
	font-size: 0;
	overflow:hidden;
}
.watching-detail_img-box-img {
	width: 100%;
	height: 422rpx;
}
.watching-detail_img-box-modal {
	width: 100%;
	height: 88rpx;
	position: absolute;
	left: 0;
	bottom: 0;
	background: rgba(51, 51, 51, 0.5);
	display: flex;
	align-items: center;
	color: #fff;
	font-size: 24rpx;
	padding: 20rpx;
	box-sizing: border-box;
}
.watching-detail_img-box-modal-time {
	flex: 1;
}
.watching-detail_icon-box {
	height: 258rpx;
	width: 100%;
	display: flex;
	align-items: center;
	color: #fff;
	font-size: 24rpx;
	background: #4E6070;
}
.watching-detail_icon-box-item {
	flex: 1;
	height: 258rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	border-right: 1px solid #34424E;
}
.watching-detail_icon-box-item:last-child {
	border-right: none;
}
.watching-detail_icon-box-item-img {
	width: 60rpx;
	height: 60rpx;
}
.watching-detail_icon-box-item-name {
	margin: 20rpx 0 30rpx 0;
}
.watching-detail_icon-box-item-value {
	font-size: 32rpx;
}
.watching-detail_chart-item {
	width: 100%;
	height: 340rpx;
	/*background: #34424E;*/
	border-bottom: 1px solid #34424E;
	background: #485A68;
}
.watching-detail_chart-item-chart {
	width: 100%;
	height: 340rpx;
}