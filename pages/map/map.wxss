.map-page {
	position: absolute;
	top: 0;
	bottom: 0;
	width: 100%;
	overflow-y: auto;
	background: #D8D8D8;
}
.map-page .map {
	width: 100%;
	height: 502rpx;
}
.map-page .info {
	background: #fff;
}
.map-page .info-upper {
	display: flex;
	align-items: center;
	justify-content: center;
	border-bottom: 1rpx solid #D8D8D8;
	padding: 28rpx 0;
}
.map-page .info-upper .upper-item {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.map-page .info-upper .upper-item .item-num {
	font-size: 38rpx;
	color: #0066DD;
}
.map-page .info-upper .upper-item .item-name {
	margin-top: 10rpx;
	font-size: 28rpx;
	color: #000;
}
.map-page .info-upper .border-left {
	border-left: 1rpx solid #D8D8D8;
}
.map-page .info-upper .upper-item .orange {
	color: #FF9933;
}
.map-page .info .info-down {
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 24rpx 0;
	font-size: 32rpx;
	color: #999;
}

.map-page .info .info-down image {
	width: 42rpx;
	height: 42rpx;
	margin-right: 20rpx;
}

.map-page .list {
	margin-top: 10rpx;
	background: #fff;
}

.map-page .list .list-item {
	display: flex;
	align-items: center;
	justify-content: space-around;
	padding: 20rpx;
	border-bottom: 1rpx solid #D8D8D8;
}

.map-page .list .list-item .item-title {
	flex: 1;
	margin: 0 20rpx 0 20rpx;
	font-size: 32rpx;
	flex-wrap: nowrap;
	white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis
}

.map-page .list .list-item .small-img {
	width: 28rpx;
	height: 42rpx;
}

.map-page .list .list-item .rotate {
	transform: rotate(-90deg);
	width: 24rpx;
	height: 18rpx;
	margin-left: 20rpx;
}
.map-page .list .list-item image {
	width: 48rpx;
	height: 48rpx;
	flex: 0 0 auto;
}